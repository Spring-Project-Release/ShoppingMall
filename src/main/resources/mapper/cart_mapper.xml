    <update id="updateCartAmount">
        UPDATE cart
        SET amount = amount + #{amount}
        WHERE cart_id = #{cartId}
        LIMIT 1
    </update>

    <delete id="deleteCartIfAmountIsZero">
        <![CDATA[
        DELETE FROM cart
        WHERE cart_id = #{cartId} AND amount <= 0
        ]]>
    </delete>
</mapper>